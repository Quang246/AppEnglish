<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtCard_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text 1"
            android:textSize="21dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/txtCard_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text 2"
            android:textSize="18dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/txtCard_1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtCard_2"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/btnVolume"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/baseline_volume_up_24"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/btnVolume"
                android:gravity="right">

                <ImageView
                    android:id="@+id/heartBorder"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/heart_border"/>

                <ImageView
                    android:id="@+id/btnBaCham"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/heartBorder"
                    android:src="@drawable/baseline_ellipsis_black"/>

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>